<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewCreateServiceOpGenInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgServiceOpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/ServiceOpImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtGenInfo"
        android:layout_width="113dp"
        android:layout_height="27dp"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="12dp"
        android:text="General Info"
        android:textSize="18sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgServiceOpImage" />

    <TextView
        android:id="@+id/txtVolunteersShop"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="20dp"
        android:text="Volunteers shop for service opportunities..."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGenInfo" />

    <TextView
        android:id="@+id/txtServiceOpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="20dp"
        android:text="Service Opportunity Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVolunteersShop" />

    <TextView
        android:id="@+id/txtServiceOpSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Subtitle"
        app:layout_constraintStart_toStartOf="@+id/intxtServiceOpName"
        app:layout_constraintTop_toBottomOf="@+id/intxtServiceOpName" />

    <TextView
        android:id="@+id/txtServiceOpDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="@+id/intxtServiceOpSub"
        app:layout_constraintTop_toBottomOf="@+id/intxtServiceOpSub" />

    <TextView
        android:id="@+id/txtServiceOpContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contact Information"
        app:layout_constraintStart_toStartOf="@+id/intxtServiceOpDescription"
        app:layout_constraintTop_toBottomOf="@+id/intxtServiceOpDescription" />

    <EditText
        android:id="@+id/intxtServiceOpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/txtServiceOpName"
        app:layout_constraintTop_toBottomOf="@+id/txtServiceOpName" />

    <EditText
        android:id="@+id/intxtServiceOpSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/txtServiceOpSub"
        app:layout_constraintTop_toBottomOf="@+id/txtServiceOpSub" />

    <EditText
        android:id="@+id/intxtServiceOpDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/txtServiceOpDescription"
        app:layout_constraintTop_toBottomOf="@+id/txtServiceOpDescription" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="157dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtServiceOpContact"
        app:layout_constraintTop_toBottomOf="@+id/txtServiceOpContact" />

    <Button
        android:id="@+id/btnServiceOpNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>