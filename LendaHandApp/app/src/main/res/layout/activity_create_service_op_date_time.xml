    <TextView
        android:id="@+id/txtServiceOpWhenIsIt"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When is it?" />

    <TextView
        android:id="@+id/txtServiceOpWhereIsIt"
        android:layout_width="wrap_content"
