<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewCreateServiceOpCatReq"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <ImageView
        android:id="@+id/imgServiceOpImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ServiceOpImage" />

    <TextView
        android:id="@+id/txtServiceOpCatReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="12dp"
        android:text="Categories and Requirements" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="209dp"
        android:layout_height="18dp"
        android:layout_marginTop="64dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="210dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="210dp"
        android:layout_height="18dp"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/txtServiceOpCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Categories" />

    <TextView
        android:id="@+id/txtServiceOpAgeReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Age Requirements" />

    <EditText
        android:id="@+id/intxtServiceOpAddReq"
        android:layout_width="214dp"
        android:layout_height="155dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtServiceOpAddReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Additional Requirements" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnServiceOpCatReqNext"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="NEXT"
        android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>